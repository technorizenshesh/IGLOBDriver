<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:id="@+id/month_data_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_month"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/large"
            android:text="name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/large"
                android:text="@string/total_ride"
                android:layout_weight="1.4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/month_total_ride_count"
                android:textColor="@color/darktextcol"
                android:textStyle="bold"
                android:textSize="@dimen/large"
                android:text="0"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/large"
                android:text="@string/total_earning"
                android:layout_weight="1.4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/month_total_earning_tv"
                android:textColor="@color/darktextcol"
                android:textStyle="bold"
                android:textSize="@dimen/large"
                android:text="0"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/large"
                android:text="@string/accepted_ride"
                android:layout_weight="1.4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/month_acceptride_tv"
                android:textColor="@color/darktextcol"
                android:textStyle="bold"
                android:textSize="@dimen/large"
                android:text="0"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/large"
                android:text="@string/canceled_ride"
                android:layout_weight="1.4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/monthcanceled_ride"
                android:textColor="@color/darktextcol"
                android:textStyle="bold"
                android:textSize="@dimen/large"
                android:text="0"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</layout>