<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/mainlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/toobarcolor"

            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/CustomTheme" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/exit_app_but"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_back" />
            </RelativeLayout>

            <TextView
                android:id="@+id/titletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/exit_app_but"
                android:text="@string/managedocuments"
                android:textColor="@color/white"
                android:textSize="@dimen/medium" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainlay">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


                <RelativeLayout
android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="20dp">

                    <RelativeLayout
                        android:id="@+id/image_lay"
                        android:layout_width="110dp"
                        android:layout_height="95dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_img"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/user" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/edit_ic" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logog"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="0dp"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/email_id"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/edit_back"
                                android:hint="@string/email"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:maxLength="35"
                                android:padding="7dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkgrey"
                                android:textSize="@dimen/medium" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"

                        android:layout_marginRight="15dp"
                        android:layout_marginTop="7dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/password_et"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/edit_back"
                            android:hint="@string/password"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:maxLength="35"
                            android:padding="7dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/darkgrey"
                            android:textSize="@dimen/medium" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"

                        android:layout_marginRight="15dp"
                        android:layout_marginTop="7dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/mobile_et"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/edit_back"
                            android:hint="@string/phone"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:maxLength="35"
                            android:padding="7dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/darkgrey"
                            android:textSize="@dimen/medium" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/username"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/edit_back"
                                android:hint="@string/username"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:maxLength="35"
                                android:padding="7dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkgrey"
                                android:textSize="@dimen/medium" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="7dp"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/address"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/edit_back"
                                android:hint="@string/address"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:maxLength="35"
                                android:padding="7dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkgrey"
                                android:textSize="@dimen/medium" />


                        </LinearLayout>


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"

                        android:layout_marginTop="7dp"
                        android:background="@drawable/edit_back"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <Spinner
                            android:dropDownSelector="@null"
                            android:id="@+id/country_spn"
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></Spinner>



                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="7dp"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/state_et"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/edit_back"
                                android:hint="@string/state"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:maxLength="35"
                                android:padding="7dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkgrey"
                                android:textSize="@dimen/medium" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="7dp"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/city_et"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/edit_back"
                                android:hint="@string/city"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:maxLength="35"
                                android:padding="7dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/darkgrey"
                                android:textSize="@dimen/medium" />


                        </LinearLayout>


                    </LinearLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"

                        android:layout_marginTop="7dp"
                        android:background="@drawable/edit_back"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sellang"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@null"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="35"
                            android:padding="7dp"
                            android:text="@string/selectlang"
                            android:textColor="@color/black"
                            android:textColorHint="@color/darkgrey"
                            android:textSize="@dimen/medium" />


                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/worlwide" />

                    </RelativeLayout>
                </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/driver_licens_lay"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"

                        android:layout_marginTop="30dp"
                        android:background="@drawable/edit_back"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:background="@null"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="35"
                            android:padding="7dp"
                            android:text="@string/driverlicens"
                            android:textColor="@color/black"
                            android:textColorHint="@color/darkgrey"
                            android:textSize="@dimen/medium" />

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/lic_img_show"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_toLeftOf="@+id/lic_img"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            />

                        <ImageView
                            android:id="@+id/lic_img"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_attachment" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/driver_car_lay"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"

                        android:layout_marginTop="7dp"
                        android:background="@drawable/edit_back"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:background="@null"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="35"
                            android:padding="7dp"
                            android:text="@string/carimage"
                            android:textColor="@color/black"
                            android:textColorHint="@color/darkgrey"
                            android:textSize="@dimen/medium" />

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/car_img_show"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_toLeftOf="@+id/car_img"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            />

                        <ImageView
                            android:id="@+id/car_img"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_attachment" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/driver_car_ispe_lay"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"

                        android:layout_marginTop="7dp"
                        android:background="@drawable/edit_back"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:background="@null"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="35"
                            android:padding="7dp"
                            android:text="@string/carispect"
                            android:textColor="@color/black"
                            android:textColorHint="@color/darkgrey"
                            android:textSize="@dimen/medium" />

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/car_insp_show"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_toLeftOf="@+id/car_insp_img"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            />

                        <ImageView
                            android:id="@+id/car_insp_img"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_attachment" />

                    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:layout_marginTop="7dp"
            android:background="@drawable/edit_back"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:visibility="visible"
                android:id="@+id/car_model_et"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:hint="@string/carmodel"
                android:imeOptions="actionNext"
                android:maxLength="35"
                android:padding="7dp"
                android:textColor="@color/black"
                android:textColorHint="@color/darkgrey"
                android:textSize="@dimen/medium" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:layout_marginTop="7dp"
            android:background="@drawable/edit_back"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Spinner
                android:dropDownSelector="@null"
                android:id="@+id/servicetype"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:layout_marginTop="7dp"
            android:background="@drawable/edit_back"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Spinner
                android:dropDownSelector="@null"
                android:id="@+id/carmanuyear"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>

            <TextView
                android:visibility="gone"
                android:id="@+id/manufac_year"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="35"
                android:padding="7dp"
                android:text="@string/yearmanu"
                android:textColor="@color/black"
                android:textColorHint="@color/darkgrey"
                android:textSize="@dimen/medium" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_calendar" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:layout_marginTop="7dp"
            android:background="@drawable/edit_back"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Spinner
                android:dropDownSelector="@null"
                android:id="@+id/carcolspn"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>

            <TextView
                android:visibility="gone"
                android:id="@+id/car_color"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="35"
                android:padding="7dp"
                android:text="@string/selcarcol"
                android:textColor="@color/black"
                android:textColorHint="@color/darkgrey"
                android:textSize="@dimen/medium" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:background="@color/red" />

        </RelativeLayout>

    </LinearLayout>



                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"

                        android:layout_marginTop="7dp"
                        android:background="@drawable/edit_back"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/car_registrationnum"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@null"
                            android:hint="@string/carregis"
                            android:imeOptions="actionNext"
                            android:maxLength="35"
                            android:padding="7dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/darkgrey"
                            android:textSize="@dimen/medium" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/insurance_copy"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"

                        android:layout_marginTop="7dp"
                        android:background="@drawable/edit_back"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:background="@null"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="35"
                            android:padding="7dp"
                            android:text="@string/insurance"
                            android:textColor="@color/black"
                            android:textColorHint="@color/darkgrey"
                            android:textSize="@dimen/medium" />
                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/insu_img_show"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_toLeftOf="@+id/insu_img"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            />

                        <ImageView
                            android:id="@+id/insu_img"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_attachment" />

                    </RelativeLayout>

                    <Button

                        android:id="@+id/save_profile"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/buttoncol"
                        android:text="@string/update"
                        android:textColor="@color/white" />


                </LinearLayout>

            </LinearLayout>


        </ScrollView>


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/prgressbar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
